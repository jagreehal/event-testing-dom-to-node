    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to API Docker",
            "protocol": "inspector",
            "port": 5999,
            "restart": true,
            "localRoot": "${workspaceRoot}/api",
            "remoteRoot": "/usr/app",
            "outFiles": [
              "${workspaceRoot}/**/*.js"
            ]
          }   ,
          {
            "type": "node",
            "request": "attach",
            "name": "Attach to SERVER Docker",
            "protocol": "inspector",
            "port": 5998,
            "restart": true,
            "localRoot": "${workspaceRoot}/server",
            "remoteRoot": "/usr/app",
            "outFiles": [
              "${workspaceRoot}/**/*.js"
            ]
          } 
}